<%= simple_form_for [:host, @boat] do |f| %>
  <%= f.input :name %>
  <%= f.input :guests %>
  <%= f.input :boat_type, collection: ["Yacht", "Canoon", "Boat"] %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_day %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>

