<h1>Your boats:</h1>

<% @boats.each do |boat| %>
  <h2><%= boat.name %></h2>
  <p><%= boat.description %></p>

  <% if policy(boat).edit? %>
    <%= link_to "Edit" , edit_host_boat_path(boat) %>
  <% end %>

  <% if policy(boat).destroy? %>
    <%= link_to "Delete" , host_boat_path(boat), method: :delete, data: { confirm: "Are you sure?"} %>
  <% end %>

<% end %>

