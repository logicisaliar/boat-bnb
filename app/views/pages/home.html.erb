  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/logicisaliar/image/upload/v1529437712/Boat.jpg');">
    <div class="banner-content">
      <h1 class="text-white"> Welcome</h1>
      <p class="text-white">Start to party with us</p>
      <div class="banner-content">
        <div class="col-lg-6">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for a city">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
      <p>or</p>
      <%= link_to "Become a host", become_host_path, class: "btn-medium" %>
    </div>
  </div>

  <div class="container">
    <h2 class="text-center">Boats around the world</h2>
    <div class="cards">
      <div class="row">
        <% @boats.each do |boat| %>
        <div class="col-sm-4">
          <div class="card card-hover">
            <% photo_url = cl_image_path(boat.photo_url, height: 300, width: 400, crop: :fill) %>
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.2)), url('<%= photo_url %>')"></div>
            <div class="card-footer">
              <h5 class="card-title"><%= boat.name %></h5>
              <p class="card-text"><%= truncate(boat.description, length: 40)%></p>
              <%= link_to "more information", boat_path(boat), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
        <% end %>             
      </div>
    </div>
  </div>
