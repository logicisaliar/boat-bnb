<div class="banner" style="background-image: linear-gradient(-225deg, rgba(170,1,1,0.2) 0%, rgba(0,36,61,0.2) 50%), url('https://images.pexels.com/photos/237289/pexels-photo-237289.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="banner-content">
    <h1 class="text-white"> Welcome</h1>
    <p class="text-white">
      <span id="banner-typed-text"></span>
    </p>

    <form action="/city" class="form-inline">
      <input type="text" name="address" class="form-control" placeholder="Search for a city">
      <button class="btn btn-default" type="submit">Go!</button>
    </form>

    <p>or</p>

    <%= link_to "Become a host", become_host_path, class: "btn-medium" %>
  </div>
</div>

<h2 class="text-center">Boats around the world</h2>
<div class="container">
  <div class="cards">
    <div class="row">
      <% @boats.each do |boat| %>
      <div class="col-sm-4">
        <div class="card card-hover">
          <% photo_url = cl_image_path(boat.photo_url, height: 300, width: 400, crop: :fill) %>
          <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.2)), url('<%= photo_url %>')"></div>
          <div class="card-footer">
            <h5 class="card-title"><%= boat.name %></h5>
            <p class="card-text"><%= truncate(boat.description, length: 40)%></p>
            <%= link_to "more information", boat_path(boat), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>             
    </div>
  </div>
</div>
