<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/logicisaliar/image/upload/v1529437712/Boat.jpg');">
  <div class="banner-content">
    <h1>Boat (BNB)</h1>
    <h3>Beer N Beaches</h3>
    <p>Learn to party with us</p>
    <div class="card">
      <form action="city_path">
        City:<br>
        <input type="text" name="city_name">
        <input type="submit" value="Search">
      </form>
    </div>
    <br>
    <p>OR</p>
    <%= link_to "Become a host", become_host_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<% @boats.each do |b| %>
<div class="card" style="width: 18rem;">
  <%= cl_image_tag b.photo, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
  <div class="card-body">
    <h5 class="card-title"><%= b.name %></h5>
    <p class="card-text"><%= b.description %></p>
    <%= link_to "more information", boat_path(b), class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
